{
	"name": "ludo237/arcadia-cms",
	"description": "User Management System build with Laravel 4.",
	"keywords": ["framework", "laravel", "boilerplate", "laravel-boilerplate","cms","arcadia-cms","Arcadia"],
	"license": "MIT",
	"authors": [
        {
            "name": "Claudio Ludovico",
            "email": "ludovico1990@hotmail.it"
        }
    ],
	"require": {
		"laravel/framework": "4.0.*",
		"way/generators": "dev-master",
		"cartalyst/sentry": "2.0.*",
        "dflydev/markdown": "v1.0.2",
        "imagine/Imagine": "v0.4.1",
        "desmart/pagination": "1.0.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
